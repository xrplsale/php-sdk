{
    "name": "xrplsale/php-sdk",
    "description": "Official PHP SDK for XRPL.Sale platform integration with Laravel and Symfony support",
    "type": "library",
    "keywords": [
        "xrpl",
        "xrp",
        "ledger",
        "launchpad",
        "token",
        "sale",
        "defi",
        "laravel",
        "symfony",
        "php"
    ],
    "homepage": "https://xrpl.sale",
    "license": "MIT",
    "authors": [
        {
            "name": "XRPL.Sale Team",
            "email": "developers@xrpl.sale"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.5",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0 || ^2.0",
        "psr/log": "^2.0 || ^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "laravel/framework": "^10.0 || ^11.0",
        "symfony/framework-bundle": "^6.0 || ^7.0",
        "symfony/http-client": "^6.0 || ^7.0"
    },
    "suggest": {
        "laravel/framework": "For Laravel integration support",
        "symfony/framework-bundle": "For Symfony integration support"
    },
    "autoload": {
        "psr-4": {
            "XRPLSale\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "XRPLSale\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "analyse": "vendor/bin/phpstan analyse src --level=8",
        "check-style": "vendor/bin/phpcs -p --standard=PSR12 src/",
        "fix-style": "vendor/bin/phpcbf -p --standard=PSR12 src/"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "XRPLSale\\Laravel\\XRPLSaleServiceProvider"
            ],
            "aliases": {
                "XRPLSale": "XRPLSale\\Laravel\\Facades\\XRPLSale"
            }
        }
    }
}